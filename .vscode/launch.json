{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome against localhost, with sourcemaps",
            "type": "chrome",
            "request": "launch",
            "url":"http://localhost:5000/index.html",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}\\src",
            "userDataDir": "${workspaceRoot}\\.vscode\\chrome",
            "diagnosticLogging": true,
            "preLaunchTask": "lite-server"
        }
    ]
}
